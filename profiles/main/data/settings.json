{
    "accessibility.dimUnfocused.enabled": false,
    "better-comments.tags": [
        // default tags frpm better-comments
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": true,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": true
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "TODO",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        // my personal tag(s)
        {
            "tag": "\":",
            "color": "#309EC4",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": true
        },
        // from `todo-tree`
        {
            "tag": "BUG",// what for ya ini teh 0
            // meureun buat kasih tau apa yang ngebug nya [831]
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "HACK",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "FIXME", // what for ya ini teh 1
            // [831] nah kalo ini ngasih tau gimana implementasi nya buat ngehilangin bug eta
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "XXX", // what for ya ini teh 2
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "[ ]",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "[x]",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "LEGACY",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
    ],
    "dev.containers.dockerPath": "podman",
    "diffEditor.experimental.showMoves": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {},
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'RobotoMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.inlineSuggest.enabled": true,
    "editor.rulers": [
        80,
        88,
        120,
    ],
    "editor.stickyScroll.enabled": true,
    "editor.tabCompletion": "on",
    "explorer.confirmUndo": "verbose",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "files.associations": {
        "*.code-workspace.dist": "jsonc",
        ".git-blame-ignore-revs": "properties",
        "*.nix": "properties",
        "TAG_EDITMSG": "git-commit"
    },
    "files.autoSave": "afterDelay",
    "files.exclude": {
        // "**/.git": false
    },
    "files.insertFinalNewline": true,
    "files.readonlyFromPermissions": true,
    "files.readonlyInclude": {
        "**/.venv/*/**": true,
        // "**/.git/*/**": true,
    },
    "files.readonlyExclude": {
        // By GitHub Copilot + d_machine
        // "**/.git/objects/**": true,
        // "**/.git/refs/**": true,
        // "**/.git/index.lock": true,
        //"**/.git/HEAD.lock": true,
        // "**/.git/COMMIT_EDITMSG": true,
        // "**/.git/MERGE_MSG": true,
        // "**/.git/FETCH_HEAD": true,
        // "**/.git/CHERRY_PICK_HEAD": true,
        // "**/.git/REVERT_HEAD": true,
        // "**/.git/MERGE_HEAD": true,
        // "**/.git/ORIG_HEAD": true,
        // "**/.git/BISECT_LOG": true,
        // "**/.git/refs/stash": true,
        // "**/.git/logs/**": true,
        // "**/.git/logs/**/**": true,
        // "**/.git/logs/**/**/**": true,
        // "**/.git/logs/**/**/**/**": true,
        // "**/.git/logs/**/**/**/**/**": true,
        // "**/.git/logs/**/**/**/**/**/**": true,
        // "**/.git/logs/**/**/**/**/**/**/**": true,
        // "**/.git/logs/**/**/**/**/**/**/**/**": true,
        // "**/.git/logs/**/**/**/**/**/**/**/**/**": true,
    },
    "files.simpleDialog.enable": false,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.venv/*/**": true
    },
    "git.autofetch": "all",
    "git.branchProtection": [
        "master"
    ],
    "git.confirmSync": false,
    "git.defaultBranchName": "",
    "git.enableSmartCommit": false,
    "git.repositoryScanIgnoredFolders": [
        "node_modules",
        ".venv"
    ],
    "git.suggestSmartCommit": false,
    "git.showActionButton": {
        "commit": false
    },
    "git.terminalGitEditor": true,
    "git.verboseCommit": true,
    "github.copilot.enable": {
        "*": true,
        "json": false,
        "markdown": true,
        "plaintext": true,
        "scminput": false,
        "yaml": false
    },
    "github.gitProtocol": "ssh",
    "githubPullRequests.pullBranch": "never",
    "markdown.extension.italic.indicator": "_",
    "markdown.extension.math.enabled": false,
    "markdown.extension.tableFormatter.enabled": false,
    "markdown.extension.theming.decoration.renderCodeSpan": false,
    "markdown.extension.theming.decoration.renderStrikethrough": false,
    "markdown.preferredMdPathExtensionStyle": "includeExtension",
    "myst.preview.extensions": [
        "amsmath",
        "colon_fence",
        "deflist",
        "dollarmath",
    ],
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "settingsSync.ignoredSettings": [
        "terminal.integrated.defaultProfile.linux",
        "dev.containers.dockerPath",
    ],
    "telemetry.telemetryLevel": "off",
    "todo-tree.general.tags": [
        // default tags frpm better-comments
        "!",
        "?",
        "//",
        "TODO",
        "*",
        "\":",
        "BUG",
        "HACK",
        "FIXME",
        "XXX",
        "[ ]",
        "[x]",
        "LEGACY"
    ],
    "window.commandCenter": true,
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.labelFormat": "short",
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "Default Dark+",
    "workbench.preferredLightColorTheme": "Default Light+",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    // vscodium settings
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
          "path": "/home/d/.local/bin/host-spawn",
          "args": ["zsh"]
        }
    },
