{
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
          "path": "/usr/bin/flatpak-spawn",
          "args": ["--host", "--env=TERM=xterm-256color", "zsh"]
        }
    },
    "vsix.sources": {
        "opn": {
            "type": "marketplace",
            "serviceUrl": "https://open-vsx.org/vscode/gallery",
        },
        "pro": {
            "type": "marketplace",
            "serviceUrl": "https://marketplace.visualstudio.com/_apis/public/gallery",
        },
    },
    "vsix.groups": {
        "necessary": [
            "pro:albert.TabOut",
        ],
        "python": [
            "pro:ms-python.python",
            "pro:ms-python.black-formatter"
        ],
        "other": [
            "pro:redhat.vscode-yaml",
        ],
        "unnecessary": [ // not neccessary yet
            "pro:micnil.vscode-checkpoints",
            "pro:ericliu.coldcode",
        ]
    },
    "vsix.extensions": [
        // {
        //     "id": "python",
        //     "enabled": false
        // },
        // BUG: It doesn't installed on disabled state.
        "necessary",
        "python",
        "other",
        // independent
        "pro:aaron-bond.better-comments",
    ],
    "vsix.crons": {
        "update": "0 12 * * *"
    },
}
